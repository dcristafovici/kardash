.form-row
  display flex


input 
  background: #FFFFFF;
  border: 1px solid #D4D1D1;
  box-sizing: border-box;
  border-radius: 3px 0px 0px 3px;
  width 100%
  height 38px
  outline: none
  padding-left 15px
  box-sizing: border-box
  font-size 16px
  color $bk
  font-family $Light
  +placeholder()
    font-size: 16px;
    line-height: 21px;
    color: #979797;
    font-family $Light

button
  height 38px
  background: #212212;
  border-radius: 0px 3px 3px 0px;
  display inline-flex
  align-items: center
  padding-left 16px
  padding-right 16px
  border: none 
  outline: none 
  text-transform uppercase
  cursor pointer
  box-sizing: border-box
  span
    font-size: 13px;
    line-height: 15px;
    text-align: center;
    letter-spacing: 2px;
    color $wh
    font-family $Bold



.form-row
  margin-bottom 15px
input[type='checkbox']
  display none
  &:checked
    + label
      &::after
        opacity 1

label
  padding-left 30px
  position relative
  cursor pointer
  font-size: 14px;
  line-height: 18px;
  font-family $Light
  color: #212212;
  &::before
    content ''
    position absolute
    left 0
    top 0
    border: 1px solid #D4D1D1;
    box-sizing: border-box;
    border-radius: 2px;
    width 18px
    height 18px
  &::after
    content ''
    position absolute
    top 3px
    left: 3px
    opacity 0
    width 12px
    height 12px
    transition: all 0.4s ease-in-out
    background url('../img/assets/footer/check.svg') no-repeat center/contain

  a
    text-decoration underline
    color: inherit