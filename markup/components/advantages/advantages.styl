.advantages
  padding-bottom 60px
  &-items
    display flex
    flex-wrap: wrap
  &-item
    width 25%
    span
      display block
      text-align center
      width 100%
      font-size: 14px;
      line-height: 16px;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-family $Bold
      color: #9E8B6B;
      margin-bottom 13px
    p
      font-family: $Light;
      font-size: 14px;
      padding 0 40px
      box-sizing: border-box
      line-height: 24px;
      letter-spacing: 0
      text-align: center;
      color: $bk;