@media only screen and (max-width : 1470px)
  .content
    width 1170px
  .custom-item
    height 462px
  .footer-columns
    padding-right 5%
  .advantages-item p
    padding 0 20px

@media only screen and (max-width : 1200px)
  .content
    width 950px

  .slider-block
    height 450px
  .custom-top
    width 90%
  .custom-item
    height 420px
  .footer-right
    padding-left 25px

@media only screen and (max-width : 992px)
  .content
    width 728px
  nav.menu li
    margin-right 22px
  .slider-block
    height 420px
  

  section.custom
    .content
      width 100%
  .custom-item
    height 360px
  .custom-items
    margin-bottom 40px
  
  .advantages
    padding-bottom 5px
    &-item
      margin-bottom 35px
      width 50%

  .footer-column
    display none
    &:nth-child(2)
      display block

  .footer-left
    width: 30.21978021978022%
    &::after
      content none
  .footer-right
    width: 69.78021978021978%
  .footer-form .form-row:first-child
    margin-right 0
    button
      padding 0
      justify-content center
      width 100%

@media only screen and (max-width : 767px)
  .content
    width calc(100% - 30px)
  .custom-top
    width: calc(100% - 30px)
  .custom-item.third
    width 49.71631205673759%
  nav.menu li
    margin-right 12px
    a
      font-size 13px
    
  .header-phone
    a
      font-size 14px
  .logo
    width 80%
    margin 0 auto
  .footer-wrapper
    flex-wrap: wrap
  .footer
    &-left
      width 100%
    &-right
      padding-left 0
      width 90%
      padding-top 40px
      max-width: 480px

  .footer
    .dev
      width 50%
  .footer-right__name
    margin-bottom 20px


@media only screen and (max-width : 575px)
  .content
    width calc(100% - 30px)
  .footer-right
    width 100%

  nav.menu
    position absolute
    left 0
    top 0
    width 100%
    min-height: 100vh
    padding-top 40px
    padding-bottom 20px
    box-sizing: border-box
    width 300px
    background $wh
    opacity 0
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.15);
    transform: translate3d(0,-30px,0)
    transition: all .5s ease-in-out
    z-index -1
    visibility hidden
    &.active
      opacity 1
      z-index 20
      transform: translateY(0)
      visibility: visible
    li
      width 100%
      margin-right 0
      a
        font-size 16px
    a
      width 100%
      height 50px
      display inline-flex
      align-items: center
      padding-left 20px
      box-sizing: border-box
      border-bottom 1px solid #ccc
      font-size: 16px
    ul
      flex-direction: column
      width 100%
      align-items flex-start

  .header-phone
    display none
  .header-wrapper
    flex-wrap: wrap
    height: auto
    padding-top 20px
  .header-logo
    width 100%
    padding-bottom 20px
    display flex
    justify-content center
    .logo
      display flex
      justify-content center
  .header
    position relative
    .content
      width 100%

  .header-top
    border-bottom none 
  .header-bottom
    padding 0
  .header-right
    height 50px
    padding 0 20px
    box-sizing: border-box
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.15);
    width 100%
  .burger
    display block
    position absolute
    bottom 0
    left 0
    &.active
      bottom auto
      top 0
      z-index 21
      transition-delay: 1s